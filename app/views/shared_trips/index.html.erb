<h3> List of all users added to this trip </h3>
<% @users.each do |user| %>

<p><%= user.username %></p>
<hr>
<% end %>




<h2> List of all trips </h2>
<%= link_to "Send an invitation to a friend to share this trip!", new_trip_shared_trip_path %>
<hr>
<% @trips.each do |trip| %>
<%= link_to image_tag(trip.trip_image_url), trip_path(trip) %>
<h2><%= link_to trip.title %></h2>
<h3><%= trip.start_time %></h3>
<p><%= trip.description %></p>
<hr>
<% end %>






